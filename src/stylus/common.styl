*
    margin 0
    padding 0

html
    font-size 20px
    line-height 20px
    font-family Segoe UI, Frutiger, Frutiger Linotype, Dejavu Sans, Helvetica Neue, Arial, sans-serif

body
    width 100%
    height 100%

.header
    height 140px
    padding-top 10px
    background-color #333

.menu-bar
    height 40px
    background-color #000

.menu
    list-style none
    padding 0

    li
        display inline-block
        margin-left 10px
        font-size 0.9rem
        line-height 2rem

        a
            text-decoration none
            color #fff

            &:hover
                color #06c

.logo

    &_pucture
        height 800px
        background-image url(../images/logo-picture.png)

        .container
            position relative
            height 100%

        &_title
            position absolute
            width 100%
            bottom 200px
            font-size 6rem
            line-height 6rem
            font-weight 300
            color #000

    &_background
        height 830px
        background-color #184768
        color #ffffff

        .container
            height 100%

            h3
                margin-bottom 50px

            .text
                width 100%

        &_columns
            width 100%
            margin-top 60px
            height 100px

            &_wrapper
                position relative
                width 80%
                margin 0 auto

            &_column
                width calc(100% / 3)
                float left

        &_images
            width 100%
            height 360px

            &_img
                width calc(100% / 2)
                float left

                &:first-child
                    margin-left 0

                &:last-child
                    margin-right 0

    &_title
        height 100px
        padding-bottom 0.2rem
        background-color #184768
        color #ffffff

.container
    width 920px
    margin 0 auto
    text-align center

.columns
    width 100%
    height 500px
    margin-top -20px

    &_first
        float left
        width 50%
        text-align left

        img
            margin 30px

    &_second
        float right
        width 50%
        padding-top 100px
        text-align left

h3
    font-size 1.8rem
    line-height 5rem
    font-weight 500

.no-line-height
    margin-bottom 30px
    line-height 2.5rem

.text
    width 700px
    margin 0 auto
    margin-bottom 50px
    font-size 0.75rem
    text-align left

    &_small
        width 100%
        padding 30px 0
        font-size 0.75rem
        text-align left

    &_align-center
        text-align center

img
    margin 30px 0

ul
    margin-top -30px
    margin-bottom 50px
    padding-left 165px
    font-size 0.75rem
    text-align left

iframe
    width 730px
    height 440px

.embedded-video
    margin 10px auto

.iframe-first
    margin-top 100px

.footer-link
    margin-top 50px
    text-align left

    a
        color #000
