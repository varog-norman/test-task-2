@media screen and (max-width : 920px) {
    html {
        overflow-x: hidden;
    }
    .body {
        width: 100%;
        height: 100%;
    }
    .menu-bar {
        height: 240px;
    }
    .menu li {
        display: block;
        text-align: center;
    }
    .logo_pucture_title {
        font-size: 4rem;
    }
    .logo_title {
        padding-top: 20px;
        margin-bottom: 20px;
    }
    .logo_background {
        margin-bottom: 30px;
    }
    .logo_background .container {
        padding-top: 50px;
    }
    .logo_background_columns {
        height: 150px;
    }
    .logo_background_images {
        height: 300px;
    }
    .container img {
        margin-bottom: 30px;
    }
    .columns {
        height: 650px;
    }
    .columns_first {
        float: none;
        width: 100%;
        text-align: center;
    }
    .columns_first img {
        margin: 0;
        margin-top: 30px;
    }
    .columns_second {
        float: none;
        width: 100%;
        text-align: center;
        padding-top: 0;
        padding-left 20px;
        box-sizing: border-box;
    }
    .container {
        width: 100%;
    }
    .text {
        width: 80%;
        margin-top: 20px;
    }
    iframe {
        width: 80%;
        height: 200px;
    }
    img {
        max-width: 100%;
        margin: 0;
    }
    h3 {
        font-size: 1.5rem;
        line-height: 2rem;
    }
    ul {
        padding-left: 40px;
    }
    .footer-link {
        text-align: center;
    }
}
